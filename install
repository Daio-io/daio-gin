#!/bin/bash

set -e

VERSION=1.1.0

TEMPDIR=/tmp/gin
INSTALLDIR=$HOME/bin

if [[ ! "$PATH" =~ "$INSTALLDIR" ]]; then
    INSTALLDIR='/usr/local/bin'
fi

mkdir -p $INSTALLDIR
mkdir -p $TEMPDIR
echo "Downloading Gin v$VERSION..."
curl --location --progress-bar --insecure "https://github.com/daio-io/gin/tarball/v$VERSION" | tar -xz -C $TEMPDIR
cp $TEMPDIR/daio-io-gin-*/gin $INSTALLDIR/gin
chmod +x $INSTALLDIR/gin
rm -fr $TEMPDIR

echo "Gin (version $VERSION) installed to $INSTALLDIR/gin."
